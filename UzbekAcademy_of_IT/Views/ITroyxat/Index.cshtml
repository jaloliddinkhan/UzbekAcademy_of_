@{
    ViewData["Title"] = "C# Dasturlash Darslari";
}

<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            color: #333;
            margin-top: 20px;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
            gap: 20px;
        }

        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
            width: 300px;
            text-align: center;
            padding: 20px;
            cursor: pointer;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .card iframe {
                border-radius: 8px;
            }

            .card p {
                color: #666;
                font-size: 16px;
                margin-top: 10px;
            }
        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.9);
        }

        .modal-content {
            margin: 5% auto;
            padding: 20px;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: white;
                text-decoration: none;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <div class="card-container">
        <div class="card" data-video="https://www.youtube.com/embed/klPltgcMXWw?si=1IPzS1qXZ3Q-lmeO">
            <iframe width="260" height="146" src="https://www.youtube.com/embed/klPltgcMXWw?si=1IPzS1qXZ3Q-lmeO" frameborder="0" allowfullscreen></iframe>
            <p>C Sharp dasturlash tili. 1-dars, "Hello World" dasturini tuzamiz</p>
        </div>
        <div class="card" data-video="https://www.youtube.com/embed/5QcQtK__kOA?si=vlqI9fd1rvlOysyd">
            <iframe width="260" height="146" src="https://www.youtube.com/embed/5QcQtK__kOA?si=vlqI9fd1rvlOysyd" frameborder="0" allowfullscreen></iframe>
            <p>C# dasturlash tili. 2-dars (1-qism). Dasturlashda xatolarni aniqlash va ularni bartaraf etish</p>
        </div>
        <div class="card" data-video="https://www.youtube.com/embed/YGbGwEFl8N8?si=3ltA5TlfGgThUkfL">
            <iframe width="260" height="146" src="https://www.youtube.com/embed/YGbGwEFl8N8?si=3ltA5TlfGgThUkfL" frameborder="0" allowfullscreen></iframe>
            <p>C# dasturlash tili. 2-dars (2-qism). Dasturlashda xatolarni aniqlash va ularni bartaraf etish</p>
        </div>
        <div class="card" data-video="https://www.youtube.com/embed/VpnwL93Xv4E?si=mSNK8Gvd-Qb3NPwQ">
            <iframe width="260" height="146" src="https://www.youtube.com/embed/VpnwL93Xv4E?si=mSNK8Gvd-Qb3NPwQ" frameborder="0" allowfullscreen></iframe>
            <p>C# dasturlash tili. 3-dars (1-qism)</p>
        </div>
    </div>

    <!-- Modal -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <iframe id="modal-video" width="100%" height="500px" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        // Get modal element
        var modal = document.getElementById("myModal");
        var modalVideo = document.getElementById("modal-video");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // Get all cards
        var cards = document.getElementsByClassName("card");

        // Loop through the cards and add click event to each
        for (let card of cards) {
            card.onclick = function () {
                var videoSrc = this.getAttribute("data-video");
                modalVideo.src = videoSrc;
                modal.style.display = "block";
            }
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
            modalVideo.src = "";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
                modalVideo.src = "";
            }
        }
    </script>
</body>
</html>
